<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#132639"
    android:orientation="vertical"
    tools:context="panos.locationtrack.FormActivity">

    <TextView
        android:id="@+id/NameLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:text="Enter your Name"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NameLbl"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
         />

    <TextView
        android:id="@+id/VehicleLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name"
        android:layout_marginBottom="5dp"
        android:text="Enter your vehicles VIN"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/VehicleID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VehicleLbl"
        android:layout_marginBottom="5dp"
        android:maxLength="17"
        android:textColor="@android:color/white"
        />

    <TextView
        android:id="@+id/AgeLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VehicleID"
        android:layout_marginBottom="5dp"
        android:text="Enter your Age"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/Age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AgeLbl"
        android:layout_marginBottom="5dp"
        android:maxLength="2"
        android:textColor="@android:color/white"
        />


    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#962a2e"
            android:text="Cancel" />

        <Button
            android:id="@+id/Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#962a2e"
            android:text="Save and Proceed" />


    </LinearLayout>

</RelativeLayout>
